<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools"
    >
  <data>
    <import type="android.view.View"/>
    <variable
        name="viewModel"
        type="com.demo.appko.ui.auth.viewmodel.LoginViewModel"
        />
    <variable
        name="loginActivity"
        type="com.demo.appko.ui.auth.LoginActivity"
        />
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/rl_root"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:background="@color/common_bg_color"
      >

    <Button
        android:id="@+id/btn_login"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_list_item_height"
        android:layout_marginLeft="@dimen/common_margin_left_and_right"
        android:layout_marginRight="@dimen/common_margin_left_and_right"
        android:layout_marginTop="20dp"
        android:onClick="@{loginActivity::onLoginClick}"
        android:text="@string/login_btn_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rl_login_v_code_container"
        style="@style/CommonSystemButton"
        />
    <EditText
        android:id="@+id/et_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_list_item_height"
        android:layout_marginTop="1dp"
        android:paddingEnd="40dp"
        android:paddingStart="@dimen/common_padding_left_and_right"
        android:background="@color/common_white"
        android:hint="@string/login_password_input_hint"
        android:inputType="textPassword"
        android:singleLine="true"
        android:text="@={viewModel.passWord}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_user_name"
        />
    <EditText
        android:id="@+id/et_user_name"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_list_item_height"
        android:layout_marginTop="8dp"
        android:paddingEnd="40dp"
        android:paddingStart="@dimen/common_padding_left_and_right"
        android:background="@color/common_white"
        android:hint="@string/login_user_name_input_hint"
        android:singleLine="true"
        android:text="@={viewModel.userName}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        />
    <RelativeLayout
        android:id="@+id/rl_login_v_code_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_white"
        android:visibility="@{viewModel.captchaData == null ? View.GONE: View.VISIBLE}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/et_password"
        app:layout_constraintTop_toBottomOf="@+id/et_password"
        >

      <EditText
          android:id="@+id/et_login_v_code_input"
          android:layout_width="match_parent"
          android:layout_height="@dimen/common_edit_height"
          android:layout_toLeftOf="@+id/ll_login_v_code_container"
          android:paddingLeft="@dimen/common_padding_left_and_right"
          android:paddingRight="40dp"
          android:background="@color/common_white"
          android:gravity="center_vertical"
          android:hint="@string/login_v_code_input_hint"
          android:singleLine="true"
          android:textColor="@color/common_primary_font_color"
          android:textColorHint="@color/common_hint_font_color"
          android:textSize="@dimen/common_font_size_level_2"
          android:text="@={viewModel.inputCaptcha}"
          />

      <LinearLayout
          android:id="@id/ll_login_v_code_container"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/common_edit_height"
          android:layout_alignParentRight="true"
          android:layout_marginRight="@dimen/common_margin_left_and_right"
          android:paddingBottom="4dp"
          android:paddingTop="4dp"
          android:orientation="horizontal"
          >

        <ImageView
            android:id="@+id/iv_login_v_code"
            android:layout_width="115dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:onClick="onRefreshCaptchaClick"
            />

        <LinearLayout
            android:id="@+id/ll_change_v_code"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/common_margin_left_and_right"
            android:gravity="center"
            android:orientation="vertical"
            android:onClick="@{loginActivity::onRefreshCaptchaClick}"
            >
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/login_change_v_code"
              android:textColor="@color/common_app_theme_color"
              />

        </LinearLayout>

      </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_login_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        android:text="@string/login_register_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        />

    <TextView
        android:id="@+id/tv_login_retrieve_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/login_retrieve_password_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_login"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_ab_height"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
