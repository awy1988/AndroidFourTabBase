<resources>
  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowIsTranslucent">true</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowActionBar">false</item>
    <item name="android:screenOrientation">portrait</item>
    <item name="android:textSize">@dimen/common_font_size_level_3</item>
    <item name="android:windowBackground">@color/common_bg_color</item>
    <item name="android:textCursorDrawable">@drawable/shape_common_edit_cursor</item>
    <item name="android:textColorHint">@drawable/selector_common_edit_hint</item>
    <item name="android:textColor">@color/common_primary_font_color</item>
  </style>


  <!--默认系统按钮样式-->
  <style name="CommonSystemButton">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/common_button_height</item>
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/common_font_size_level_1</item>
    <item name="android:textColor">@color/common_white</item>
    <item name="android:background">@drawable/selector_common_btn</item>
  </style>

</resources>
