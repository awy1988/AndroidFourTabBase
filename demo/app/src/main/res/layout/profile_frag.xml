<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
  <data>
    <variable
        name="viewModel"
        type="com.demo.ui.main.viewmodel.ProfileViewModel"
        />
    <variable
        name="fragment"
        type="com.demo.ui.main.ProfileFragment"
        />
  </data>
  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:padding="@dimen/common_padding"
      >

    <Button
        android:id="@+id/btn_take_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="退出登录"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_content"
        tools:layout_editor_absoluteX="16dp"
        style="@style/CommonSystemButton"
        android:onClick="@{() -> fragment.logout()}"
        />
    <TextView
        android:id="@+id/tv_id_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_id_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@={viewModel.user.id}"
        app:layout_constraintLeft_toRightOf="@id/tv_id_title"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_id_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="helloworld!!"
        />

    <TextView
        android:id="@+id/tv_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="用户名："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_id_title"
        />

    <TextView
        android:id="@+id/tv_name_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@={viewModel.user.name}"
        app:layout_constraintLeft_toRightOf="@id/tv_name_title"
        app:layout_constraintStart_toEndOf="@+id/tv_name_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_id_title"
        tools:text="helloworld!!"
        />
      <TextView
          android:id="@+id/tv_type_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="类型："
          app:layout_constraintLeft_toLeftOf="parent"
          app:layout_constraintTop_toBottomOf="@id/tv_name_title"
          />

      <TextView
          android:id="@+id/tv_type_content"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@={viewModel.user.type}"
          app:layout_constraintStart_toEndOf="@+id/tv_type_title"
          app:layout_constraintTop_toBottomOf="@+id/tv_name_title"
          tools:text="helloworld!!"
          />


  </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
