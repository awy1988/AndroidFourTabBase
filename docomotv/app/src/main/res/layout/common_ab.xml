<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_ab_height">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_ab_height"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/ll_common_ab_back_btn"
            android:layout_width="@dimen/common_ab_button_width"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="15dp"
            android:background="@drawable/selector_btn_ab_back"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_back_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/common_arrow_left_white"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_common_ab_title"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/common_font_size_level_1"
            android:textColor="@color/common_white"
            android:text=""
            android:singleLine="true"
            android:ellipsize="end"
            android:gravity="center"/>

    </RelativeLayout>



</RelativeLayout>
